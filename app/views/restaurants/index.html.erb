<div class="container mt-5">
  <% @restaurants.each do |restaurant| %>
    <div class="card">
      <div class="card-body">
        <h3 class="card-title"><%= restaurant.name %></h3>
        <p><%= restaurant.category %></p>
        <p><%= restaurant.address %></p>
        <p><%= link_to "View Restaurant", restaurant_path(restaurant) %> </p>
      </div>
    </div>
  <% end %>
</div>
